@model List<BuffetAuxiliaryLib.DTOs.FoodDTO>
@{
    ViewData["Title"] = "ShowFavourites";
}

<h1>ShowFavourites</h1>

@{
    @if (Model.Count == 0)
    {
        <h4>There is nothing in your favourite dishes list yet.</h4>
    }
    else
    {
        <table class="table-bordered" width="100%">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Weight</th>
                <th>CategoryName</th>
                <th>FavouriteStatus</th>
            </tr>
            @foreach (BuffetAuxiliaryLib.DTOs.FoodDTO food in Model)
            {
                <tr>
                    <td>@food.Name</td>
                    <td>@food.Description</td>
                    <td>@food.Weight</td>
                    <td>@food.CategoryName</td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="RemoveFoodFromFavourites" asp-route-id="@food.Id">Remove</a>
                    </td>
                </tr>
            }
        </table>
    }
}