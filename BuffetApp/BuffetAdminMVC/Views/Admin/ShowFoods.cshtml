@{
    ViewData["Title"] = "ShowFoods";
    List<BuffetDAL.Models.Category> categories = (List<BuffetDAL.Models.Category>)ViewBag.Categories;
}

<h1>ShowFoods</h1>

<div>
    <h4>Foods</h4>
    <hr />
    @{
        <table class="table-bordered" width="100%">
            <tr>
                <td>Name</td>
                <td>Weight</td>
                <td>Description</td>
                <td>Category name</td>
            </tr>
            @foreach (BuffetDAL.Models.Food food in ViewBag.Foods)
            {
                <tr>
                    <td>@food.Name</td>
                    <td>@food.Weight</td>
                    <td>@food.Description</td>
                    <td>@categories.FirstOrDefault(c=>c.Id == food.CategoryId).Name</td>
                </tr>
            }
        </table>
        <div style="text-align: right">
            @Html.ActionLink("Create", "CreateFood", "Admin")
        </div>
    }

</div>
