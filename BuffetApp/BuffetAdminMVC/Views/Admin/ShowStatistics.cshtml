@using System.Data; 
@model DataTable

@{
    ViewData["Title"] = "ShowStatistics";
}

<h1>ShowStatistics</h1>

<div>
    <hr />
    @using (Html.BeginForm("ShowStatistics", "Admin", FormMethod.Get))
    {
        <select name="reportType">
            <option value="dailyReserves">Daily reserves rating</option>
            <option value="lackOfFoods">Food which was not enough</option>
            <option value="mostFavouriteFoods">Favourite foods</option>
            <option value="mostPopularFoods">Most popular ordered foods</option>
        </select>
        <input type="submit" value="Build report" />
    }
    <br />
    @{
        <h4>@ViewBag.ReportName</h4>
        <table class="table-bordered" width="50%" align="left">
            <tr>
                @foreach (DataColumn col in Model.Columns)
                {
                    <td>@col.ColumnName</td>
                }
            </tr>
            @{
                foreach (DataRow row in Model.Rows)
                {
                    <tr>

                        @foreach (object cell in row.ItemArray)
                        {
                            <td>@cell</td>
                        }
                    </tr>
                }
            }
        </table>
    }
</div>
