@using BuffetDAL.Models
@model List<ReserveDetailsModel>
@{
    ViewData["Title"] = "ShowReserveDetails";
}

<div>
    <h4>ReserveDetails for @ViewBag.Reserve</h4>
    <hr />
    @{

        <table class="table-bordered" width="100%">
            <tr>
                <td>Name</td>
                <td>Description</td>
                <td>Amount</td>
                <td>Price</td>
                <td>Sum</td>
            </tr>

            @{
                foreach (ReserveDetailsModel row in Model)
                {
                    <tr>
                        <td>@row.FoodName</td>
                        <td>@row.FoodDescription</td>
                        <td>@row.FoodAmount</td>
                        <td>@row.FoodPrice</td>
                        <td>@row.FoodSum</td>
                    </tr>
                }
            }

        </table>
    }

</div>
