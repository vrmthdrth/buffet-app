@model BuffetDAL.Models.Food

@{
    ViewData["Title"] = "CreateFood";
    List<BuffetDAL.Models.Category> categories = ViewBag.Categories;
}

<h1>CreateFood</h1>

<h4>Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFood">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden asp-for="CategoryId" class="control-label"></label> 
                <input hidden asp-for="CategoryId" class="form-control" value="1" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div>
                <select name="category" class="custom-select">
                    @{
                        foreach (BuffetDAL.Models.Category category in categories)
                        {
                            <option>@category.Name</option>
                        }
                    }
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <label>@ViewBag.Message</label>
    </div>
</div>

